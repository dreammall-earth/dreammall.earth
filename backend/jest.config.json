{
  "verbose": true,
  "preset": "ts-jest",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/index.ts",
    "!src/logger.ts",
    "!src/server/logger.ts",
    "!src/prisma.ts",
    "!**/node_modules/**",
    "!build/**"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 96,
      "branches": 89,
      "functions": 95,
      "lines": 96
    }
  },
  "modulePathIgnorePatterns": ["<rootDir>/build/"],
  "setupFiles": ["./test/testSetup.ts"],
  "setupFilesAfterEnv": ["./test/testSetupAfterEnv.ts"]
}
