authentik:
  email:
    port: 587
    timeout: 10
    use_ssl: false
    use_tls: true
global:
  image:
    repository: {{ .StateValues.image_repository }}/authentik
    tag: {{ .StateValues.image_tag }}
postgresql:
  enabled: true
redis:
  enabled: true
server:
  ingress:
    enabled: true
    annotations:
      cert-manager.io/issuer: {{ .StateValues.cert_manager_issuer }}
    hosts:
      - auth.{{ .StateValues.domain }}
    tls:
      - hosts:
        - auth.{{ .StateValues.domain }}
        secretName: authentik-letsencrypt-tls
blueprints:
  configMaps:
    - dreammall-authentik-blueprints
worker:
  env:
    - name: DREAMMALL_FRONTEND_URL
      value: https://app.{{ .StateValues.domain }}
    - name: DREAMMALL_PRESENTER_URL
      value: https://{{ .StateValues.domain }}
    - name: DREAMMALL_BACKEND_URL
      value: http://dreammall-backend:4000
    - name: AUTHENTIK_BOOTSTRAP_PASSWORD
      valueFrom:
        secretKeyRef:
          name: authentik-secrets
          key: authentik_bootstrap_password
    - name: DREAMMALL_WEBHOOK_SECRET
      valueFrom:
        secretKeyRef:
          name: dreammall-backend-env
          key: WEBHOOK_SECRET
