{
  "verbose": true,
  "preset": "ts-jest",
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts", "!**/node_modules/**", "!src/index.ts", "!build/**"],
  "coverageThreshold": {
    "global": {
      "lines": 100
    }
  },
  "modulePathIgnorePatterns": ["<rootDir>/build/"],
  "setupFiles": ["./test/testSetup.ts"],
  "setupFilesAfterEnv": ["./test/testSetupAfterEnv.ts"]
}
